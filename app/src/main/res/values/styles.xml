    </style>
    <style name="button5" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button5</item>
    </style>
    <style name="button6" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button6</item>
    </style>
</resources>
